<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.search.SearchFragment"
        android:label="Поиск"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@id/action_searchFragment_to_beerDetailsFragment"
            app:destination="@+id/beerDetailsFragment" />
        <action
            android:id="@id/action_searchFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment" />
        <action
            android:id="@id/action_searchFragment_to_breweryDetailsFragment"
            app:destination="@id/breweryDetailsFragment" />
        <action
            android:id="@id/action_searchFragment_to_feedbackCreateFragment"
            app:destination="@+id/feedbackCreateFragment" />
    </fragment>

    <fragment
        android:id="@id/beerDetailsFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.beers.BeerDetailsFragment"
        android:label="BeerDetailsFragment"
        tools:layout="@layout/fragment_beer_details">
        <argument
            android:name="beerId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@id/placeDetailsFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.places.PlaceDetailsFragment"
        android:label="PlaceDetailsFragment"
        tools:layout="@layout/fragment_place_details">
        <argument
            android:name="placeId"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@id/breweryDetailsFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.brewery.BreweryDetailsFragment"
        android:label="BreweryDetailsFragment"
        tools:layout="@layout/fragment_beer_details">
        <argument
            android:name="breweryId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@id/feedbackCreateFragment"
        android:name="com.example.beerservice.app.screens.main.feedback.FeedbackCreateFragment"
        android:label="FeedbackCreateFragment"
        tools:layout="@layout/fragment_create_feedback">
        <argument
            android:name="beerId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/singlePlaceMapFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.places.SinglePlaceMapFragment"
        android:label="SinglePlaceMapFragment"
        tools:layout="@layout/fragment_places_map"/>


</navigation>