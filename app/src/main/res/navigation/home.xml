<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:label="Главная"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.HomeFragment"
        android:label="Главная - Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_beersListFragment"
            app:destination="@id/beersListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_breweryListFragment"
            app:destination="@id/breweryListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_beerDetailsFragment"
            app:destination="@id/beerDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_breweryDetailsFragment"
            app:destination="@id/breweryDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_placeListFragment"
            app:destination="@id/placeListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />


    </fragment>


    <fragment
        android:id="@+id/beersListFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.beers.BeersListFragment"
        android:label="Пиво"
        tools:layout="@layout/fragment_beers_list">
        <action
            android:id="@+id/action_beersListFragment_to_beerFragment"
            app:destination="@id/beerDetailsFragment" />
        <action
            android:id="@+id/action_beersListFragment_to_feedbackCreateFragment"
            app:destination="@id/feedbackCreateFragment" />
    </fragment>

    <fragment
        android:id="@+id/beerDetailsFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.beers.BeerDetailsFragment"
        android:label="Пиво"
        tools:layout="@layout/fragment_beer_details">
        <argument
            android:name="beerId"
            app:argType="integer" />
        <action
            android:id="@+id/action_beerDetailsFragment_to_feedbackCreateFragment"
            app:destination="@id/feedbackCreateFragment" />
    </fragment>

    <fragment
        android:id="@+id/breweryListFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.brewery.BreweryListFragment"
        android:label="Пивоварни"
        tools:layout="@layout/fragment_brewery_list">
        <action
            android:id="@+id/action_breweryListFragment_to_breweryDetailsFragment"
            app:destination="@id/breweryDetailsFragment" />
        <argument
            android:name="searchBy"
            app:argType="string"
            android:defaultValue='" "' />
    </fragment>

    <fragment
        android:id="@+id/breweryDetailsFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.brewery.BreweryDetailsFragment"
        android:label="Пивоварня"
        tools:layout="@layout/fragment_brewery">
        <argument
            android:name="breweryId"
            app:argType="integer" />
        <action
            android:id="@+id/action_breweryDetailsFragment_to_beerDetailsFragment"
            app:destination="@id/beerDetailsFragment" />
        <action
            android:id="@+id/action_breweryDetailsFragment_to_feedbackCreateFragment"
            app:destination="@id/feedbackCreateFragment" />
    </fragment>


    <fragment
        android:id="@+id/placeDetailsFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.places.PlaceDetailsFragment"
        android:label="Место"
        tools:layout="@layout/fragment_place_details">
        <argument
            android:name="placeId"
            app:argType="integer" />
        <action
            android:id="@+id/action_placeDetailsFragment_to_beerDetailsFragment"
            app:destination="@id/beerDetailsFragment" />
        <action
            android:id="@+id/action_placeDetailsFragment_to_feedbackCreateFragment"
            app:destination="@id/feedbackCreateFragment" />
    </fragment>

    <fragment
        android:id="@+id/placeListFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.places.PlaceListFragment"
        android:label="Месте - все"
        tools:layout="@layout/fragment_place_list">
        <action
            android:id="@+id/action_placeListFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment" />
    </fragment>

    <fragment
        android:id="@id/searchFragment"
        android:name="com.example.beerservice.app.screens.main.tabs.home.search.SearchFragment"
        android:label="Поиск"
        tools:layout="@layout/fragment_search">
        <argument
            android:name="searchBy"
            app:argType="string" />
        <action
            android:id="@+id/action_searchFragment_to_beerDetailsFragment"
            app:destination="@id/beerDetailsFragment" />
        <action
            android:id="@+id/action_searchFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment" />
        <action
            android:id="@+id/action_searchFragment_to_breweryDetailsFragment"
            app:destination="@id/breweryDetailsFragment" />
        <action
            android:id="@+id/action_searchFragment_to_feedbackCreateFragment"
            app:destination="@+id/feedbackCreateFragment" />

    </fragment>

    <fragment
        android:id="@id/feedbackCreateFragment"
        android:name="com.example.beerservice.app.screens.main.feedback.FeedbackCreateFragment"
        android:label="Оставить отзыв"
        tools:layout="@layout/fragment_create_feedback">
        <argument
            android:name="beerId"
            app:argType="integer" />
    </fragment>


</navigation>