<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app2:cardBackgroundColor="#B8BC6C"
        app2:cardCornerRadius="4dp"
        app2:cardElevation="4dp"
        app2:cardPreventCornerOverlap="false"
        app2:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="84dp"
                android:layout_height="108dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="16dp"
                android:elevation="3dp">

            <ImageView
                android:id="@+id/imageViewBeer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="5">

                        <TextView
                            android:id="@+id/textViewBeerTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/beer_title"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_weight="4"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="abv: "
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/abv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.6"
                            android:textSize="12sp"
                            android:textColor="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/stile_beer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stile"
                            android:textSize="12sp"
                            android:layout_weight="4"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ibu: "
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/ibu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <RatingBar
                            android:id="@+id/rating_beer_stars"
                            style="@android:style/Widget.Holo.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="6"/>

                        <TextView
                            android:id="@+id/beer_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="12dp"/>

                    </LinearLayout>

                    <TextView
                        style="@style/linkText"
                        android:id="@+id/textViewBeerFeedBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/create_feedback"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewBeerDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="@string/beer_description_adblock" />

                </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>